<div class="notifications-index">
    <li>
        <% if notifications.present? %>
        <% notifications.each do |notification| %>
        <% unless notification.read %>
        <span class="label label^pill label-warning">既読</span>
        <% if notification.comment.present? %>
        <small class="dropdown">ブログ「<%= notification.comment.blog.title %>」に<%= sender_user(notification) %>さんがコメントしました。</small>
        <% elsif notification.project.present? %>
        <small class ="dropdown">プロジェクト「<%= notification.project.name %>」に<%= sender_user(notification) %>さんがあなたを招待しました。</small>
        <% end %>
        <p class="palette-paragraph text-right">
            <small class="dropdown">
                <i class="fa fa-clock-o"></i>&ensp;<%= posted_time(notification.created_at) %>
            </small>
        </p>
        <% end %>
        <% end %>
        <% end %>
    </li>
</div>