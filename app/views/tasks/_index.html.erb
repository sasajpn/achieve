

<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>Deadline</th>
      <th>Charge</th>
      <th>Done</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= task.user.name %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.charge.name %></td>
        <td><%= if task.done? then "完了" else "未完了" end %></td>
        <td><%= if task.status == 1 then "対応中" elsif task.status == 0 then "未着手" end %></td>
        <td><%= link_to 'タスク詳細へ', user_task_path(task.user, task) %></td>
        <td><%= link_to '編集', edit_user_task_path(task.user, task) %></td>
        <td><%= link_to '削除', user_task_path(task.user, task), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

