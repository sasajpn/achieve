<%= form_for(@help, url: helps_confirm_path) do |f| %>
<%= render 'shared/error_messages' %>

<%= f.label :name, 'お名前' %>
<%= f.text_field :name %>

<%= f.label :email, 'メールアドレス' %>
<%= f.text_field :email %>

<%= f.label :content, 'お問い合わせ内容' %>
<%= f.text_area :content %>

<%= f.submit '確認' %>
<% end %>