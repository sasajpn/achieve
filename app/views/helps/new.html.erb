<div class="container">
<div class="login">

<%= form_for(@help, url: helps_confirm_path) do |f| %>
<%= render 'shared/error_messages' %>

<div class="field">
<%= f.label :name, 'お名前' %><br \>
<%= f.text_field :name %>
</div>

<br \>
<div class="field">
<%= f.label :email, 'メールアドレス' %><br \>
<%= f.text_field :email %>
</div>

<br \>
<div class="field">
<%= f.label :content, 'お問い合わせ内容' %><br \>
<%= f.text_area :content, cols: 30, rows: 8 %>
</div>

<br \>
<%= f.submit '確認', class: "btn btn-primary" %>
<% end %>

<br \>
<%= link_to 'トップページ', root_path, class: 'btn' %>

</div>
</div>
