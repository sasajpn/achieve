<div class="row">
        <div class="col-sm-4">
          <% task_comments.each do |task_comment| %>
          <ul class="list-group">
            <li class="list-group-item">
              <% unless task_comment.id.nil? %>
              <div class="task_comment_user"><%= task_comment.user.name %></div>
              <div class="task_comment_content"><%= task_comment.content %></div>
              <%= link_to '編集', edit_taskline_task_comment_path(task_comment), class: "btn btn-success btn-xs" %>
              <%= link_to '削除', taskline_task_comment_path(task_comment), method: :delete, remote: true, data: { confirm: '本当に削除してもよろしいですか？' }, class: "btn btn-danger btn-xs" %>
              <% end %>
            </li>
          </ul>
          <% end %>
        </div><!-- /.col-sm-4 -->
</div>
