<div class="row">
<div class="col-sm-6 col-md-4">
<div class="thumbnail">
<div class="caption">
<h3>
    <% if @user.image? %>
    <%= image_tag @user.image.thumb.url, class: "avatar" %>
    <% else %>
    <%= profile_img @user %>
    <% end %>
    <%= @user.name %>
</h3>
    <p><%= @user.profile %></p>
    <% if current_user && current_user.id == @user.id %>
    <%= link_to '編集', edit_user_path(current_user.id) %>
    <% end %>
<% if @user != current_user %>
<%= render partial: "follow_form", locals: { user: @user } if signed_in? %>
<% end %>

</div>
</div>
<% @firend_users ||= current_user %>
<!--<%= link_to '友達'%>
<%= link_to "ユーザー一覧へ", users_path %>
</div>
</div>