<div class="container">
<div class="login">
  
<h4>パスワードを忘れた場合</h4>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

<br \>
  <div class="actions">
    <%= f.submit "パスワード変更用リンクを送信する", class: "center btn btn-sm btn-warning" %>
  </div>
<% end %>


<br \>
<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name), class: "center btn btn-sm btn-link" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "ユーザー登録がまだの方はこちら", new_registration_path(resource_name),class: "center btn btn-sm btn-link" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "メールが届かない場合はこちら", new_user_confirmation_path(resource_name), class: "center btn btn-sm btn-link" %><br \>
<% end -%>

</div>
</div>